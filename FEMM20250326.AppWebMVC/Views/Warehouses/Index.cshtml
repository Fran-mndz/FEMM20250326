@model IEnumerable<FEMM20250326.AppWebMVC.Models.Warehouse>

@{
    ViewData["Title"] = "Bodegas";
}

<h1>Bodegas</h1>


<form asp-action="Index">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Nombre de bodega</label>
                <input type="text" name="warehouseName" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <input type="submit" value="Buscar" class="btn btn-primary" />
            <a asp-action="Create" class="btn btn-info">Agregar Bodega</a>
        </div>
    </div>
</form>
<br />
<table class="table mt-4" id="myTable">
    <thead>
        <tr>
            <th>
                Bodega
            </th>
            <th>
                Notas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WarehouseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function() {
             $('#myTable').DataTable({
               "language":languageTable
             });
        });
    </script>
}