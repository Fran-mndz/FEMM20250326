@model FEMM20250326.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "Eliminar bodega";
}

<h1>Eliminar</h1>

<h3>Seguro que deseas eliminar esta bodega?</h3>
<div class="mt-4">
    <h4>Bodega</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Bodega
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WarehouseName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Regresar</a>
    </form>
</div>
