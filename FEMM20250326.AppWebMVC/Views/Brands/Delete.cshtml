@model FEMM20250326.AppWebMVC.Models.Brand

@{
    ViewData["Title"] = "Eliminar Marca";
}

<h1>Eliminar</h1>

<h3>Estas seguro de querer borrar esto?</h3>
<div>
    <h4>Brand</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de la Marca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Regresar</a>
    </form>
</div>
