@model FEMM20250326.AppWebMVC.Models.Brand

@{
    ViewData["Title"] = "Detalles de la Marca";
}

<h1>Detalles</h1>

<div>
    <h4>Marca</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de la Marca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-danger">Regresar</a>
</div>
