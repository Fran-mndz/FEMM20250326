@model FEMM20250326.AppWebMVC.Models.Product

@{
    ViewData["Title"] = "Añadir";
}

<h1>Añadir producto</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
            <div class="form-group col-6">
                <label asp-for="ProductName" class="control-label">Nombre producto</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
                <div class="form-group col-6">
                <label asp-for="Description" class="control-label">Descripción</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="form-group ">
                <label asp-for="Price" class="control-label">Precio</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
                <div class="form-group col-6">
                <label asp-for="WarehouseId" class="control-label">Bodega</label>
                <select asp-for="WarehouseId" class ="form-control" asp-items="ViewBag.WarehouseId"></select>
            </div>
                <div class="form-group col-6">
                <label asp-for="BrandId" class="control-label">Marca</label>
                <select asp-for="BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Regresar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
